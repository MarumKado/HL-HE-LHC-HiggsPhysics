% --
% -- Make chapterheads right aligned, modern font, lines on top and bottom
% -- \makechapterhead is for numbered chapters
% -- \makeschapterhead is for unnumbered chapters
% --
\makeatletter % permit the at character in the macro definition text
\renewcommand{\@makechapterhead}[1]{%
\vspace*{10\p@}% 10 points from the top of the page
{\parindent \z@ \raggedleft \normalfont % raggedleft is right aligned
% --Formatting of chapter number
\ifnum \c@secnumdepth >\m@ne
\hrule\hfill\par % horizontal line
\vskip 20\p@
\huge\sf \@chapapp\space \thechapter % Chapter number
% "Chapter #." with # being the chapter number
% \vspace{5pt}% % adds vertical space
\par\nobreak
\vskip 20\p@
\fi
\interlinepenalty\@M
% -- Formatting of chapter title
\Huge \textbf {#1}\par\nobreak % chapter title is argument #1
\vspace{4pt}% % adds vertical space
\hrulefill\hfill\par % horizontal line
\vskip 40\p@ % leave 40 points space to the first text line
}}

% --
% -- makeschapterhead with an 's' is used to format unnumbered \chapter*
% --
\def\@makeschapterhead#1{%
\vspace*{10\p@}% 10 points from the top of the page
{\parindent \z@ \raggedleft \normalfont % raggedleft is right aligned
\hrule\hfill\par % horizontal line
\vskip 20\p@
\interlinepenalty\@M
% -- Formatting of chapter title
\Huge\sf \textbf {#1}\par\nobreak % chapter title is argument #1
\vspace{4pt}% % adds vertical space
\hrulefill\hfill\par % horizontal line
\vskip 40\p@ % leave 40 points space to the first text line
}}

\makeatother % make the at character again a special character
